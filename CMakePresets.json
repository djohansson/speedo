{
	"version": 8,
	"configurePresets": [
		{
			"name": "x64-windows-clang",
			"displayName": "Speedo Toolchain for x64-windows-clang",
			"description": "",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",

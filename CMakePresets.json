{
	"version": 8,
	"configurePresets": [
		{
			"name": "ninja-multi-vcpkg",
			"generator": "Ninja Multi-Config",
			"description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
			"binaryDir": "${sourceDir}/build/${presetName}-clang",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"installDir": "${sourceDir}/build/install/${presetName}-clang",
			"environment": {
				"LLVM_ROOT": "${sourceDir}/build/toolchain/${presetName}-release",
				"VCPKG_ROOT": "~/.vcpkg"
			},
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": "debug;profile;release",
				"CMAKE_MAP_IMPORTED_CONFIG_PROFILE": ";profile;release",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
				"VCPKG_MANIFEST_FEATURES": "client;server",
				"VCPKG_TARGET_TRIPLET": "${presetName}-clang",
				"VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/scripts/cmake/triplets",
				"VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/scripts/cmake/toolchains/clang.toolchain.cmake"
			},
			"warnings": {
				"dev": false
			},
			"hidden": true
		},
		{
			"name": "x64-windows",
			"inherits": "ninja-multi-vcpkg",
			"environment": {
				"LLVM_ROOT": "${sourceDir}/build/toolchain/x64-windows-clangcl-release"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "arm64-osx",
			"inherits": "ninja-multi-vcpkg",
			"cacheVariables": {
				"CMAKE_APPLE_SILICON_PROCESSOR": "arm64",
				"CMAKE_OSX_SYSROOT": "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "arm64-linux",
			"inherits": "ninja-multi-vcpkg",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "x64-linux",
			"inherits": "ninja-multi-vcpkg",
			"environment": {
				"LLVM_ROOT": "${sourceDir}/build/toolchain/x64-linux-release"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "Configure preset using toolchain file",
			"displayName": "Configure preset using toolchain file",
			"description": "Sets Ninja generator, build and install directory",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_TOOLCHAIN_FILE": "",
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
			}
		}
	],
	"buildPresets": [
		{
			"name": "x64-windows",
			"configurePreset": "x64-windows",
			"hidden": true
		},
		{
			"name": "x64-windows-debug",
			"configurePreset": "x64-windows",
			"configuration": "debug"
		},
		{
			"name": "x64-windows-release",
			"configurePreset": "x64-windows",
			"configuration": "release"
		},
		{
			"name": "x64-windows-profile",
			"inherits": "x64-windows-release",
			"configuration": "profile"
		},
		{
			"name": "arm64-osx",
			"configurePreset": "arm64-osx",
			"hidden": true
		},
		{
			"name": "arm64-osx-debug",
			"configurePreset": "arm64-osx",
			"configuration": "debug"
		},
		{
			"name": "arm64-osx-release",
			"configurePreset": "arm64-osx",
			"configuration": "release"
		},
		{
			"name": "arm64-osx-profile",
			"inherits": "arm64-osx-release",
			"configuration": "profile"
		},
		{
			"name": "arm64-linux",
			"configurePreset": "arm64-linux",
			"hidden": true
		},
		{
			"name": "arm64-linux-debug",
			"configurePreset": "arm64-linux",
			"configuration": "debug"
		},
		{
			"name": "arm64-linux-release",
			"configurePreset": "arm64-linux",
			"configuration": "release"
		},
		{
			"name": "arm64-linux-profile",
			"inherits": "arm64-linux-release",
			"configuration": "profile"
		},
		{
			"name": "x64-linux",
			"configurePreset": "x64-linux",
			"hidden": true
		},
		{
			"name": "x64-linux-debug",
			"configurePreset": "x64-linux",
			"configuration": "debug"
		},
		{
			"name": "x64-linux-release",
			"configurePreset": "x64-linux",
			"configuration": "release"
		},
		{
			"name": "x64-linux-profile",
			"inherits": "x64-linux-release",
			"configuration": "profile"
		}
	]
}
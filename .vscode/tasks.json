{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "FastBuild (Cache)",
			"type": "shell",
			"command": "fbuild",
			"args": [
				"-cache",
				//"all"
				"debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"env": { "Path": "${env:Path};${workspaceFolder}/build.vcpkg-installed/x64-windows-clang/tools/fastbuild" }
			}
		},
		{
			"label": "FastBuild (Clean, Cache)",
			"type": "shell",
			"command": "fbuild",
			"args": [
				"-clean",
				"-cache",
				"all"
			],
			"group": "build",
			"options": {
				"env": { "Path": "${env:Path};${workspaceFolder}/build.vcpkg-installed/x64-windows-clang/tools/fastbuild" }
			}
		},
		{
			"label": "FastBuild (Clean, No Cache)",
			"type": "shell",
			"command": "fbuild",
			"args": [
				"-clean",
				"all"
			],
			"group": "build",
			"options": {
				"env": { "Path": "${env:Path};${workspaceFolder}/build.vcpkg-installed/x64-windows-clang/tools/fastbuild" }
			}
		}
	]
}
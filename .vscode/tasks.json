{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "FastBuild (Cache)",
			"type": "shell",
			"windows": {
				"command": "fbuild.exe",
			},
			"linux": {
				"command": "fbuild",
			},
			"osx": {
				"command": "fbuild",
			},
			"args": [
			//	"-showcmds",
				"-cache",
			//	"-cacheverbose",
				"-summary",
				"all"
			],
			"group": {
                "kind": "build",
                "isDefault": true
            }
		},
		{
			"label": "FastBuild (Clean, Cache)",
			"type": "shell",
			"windows": {
				"command": "fbuild.exe",
			},
			"linux": {
				"command": "fbuild",
			},
			"osx": {
				"command": "fbuild",
			},
			"args": [
				"-clean",
			//	"-showcmds",
				"-cache",
			//	"-cacheverbose",
				"-summary",
				"all"
			],
			"group": "build"
        }
    ]
}
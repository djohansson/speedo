	{
		.IntermediateFilePath + '/slangc'

		.Libraries = {
			'$ConfigName$-core',
			'$ConfigName$-slang',
			'$ConfigName$-slangc',
		}

		.LinkerOutput = '$BuildOutputPath$/$ConfigName$/slangc$ExeSuffix$'
		.LinkerOptions + .LinkerOptionsCpp
	}

	Library('$ConfigName$-glfw')

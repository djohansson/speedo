			'$ProjectPath$/external/glfw/src/posix_thread.c',
			'$ProjectPath$/external/glfw/src/glx_context.c',
		}
	#endif //__LINUX__
		.CompilerOutputPath = '$IntermediateFilePath$'

		.LibrarianOutput = '$BuildOutputPath$/$ConfigName$/$LibPrefix$glfw$LibSuffix$'

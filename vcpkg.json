{
  "name": "speedo",
  "features": {
    "toolchain": {
      "description": "LLVM Toolchain",
      "dependencies": [
        {
          "name": "llvm",
          "default-features": false,
          "features": [
            "clang",
            "clang-tools-extra",
            "compiler-rt",
            "default-targets",
            "libcxx",
            "lld"
          ]
        },
        {
          "name": "llvm",
          "default-features": false,
          "features": [
            "libcxxabi"
          ],
          "platform": "!windows"
        }
      ]
    },
    "common": {
      "description": "Common Dependencies for both Client and Server",
      "dependencies": [
        "cargs",
        "concurrentqueue",
        {
          "name": "cppzmq",
          "features": [
            "draft"
          ]
        },
        "cpptrace",
        "glaze",
        "mimalloc",
        "mio",
        "picosha2",
        "sha-intrinsics",
        "stduuid",
        "tl-function-ref",
        "unordered-dense",
        "xxhash",
        "zpp-bits",
        "zeromq"
      ]
    },
    "client": {
      "description": "Game Client Executable",
      "dependencies": [
        {
          "name": "speedo",
          "features": [ "common" ]
        },
        "ade",
        "cgltf",
        "glfw3",
        {
          "name": "glfw3",
          "default-features": false,
          "features": [
            "wayland"
          ],
          "platform": "linux"
        },
        "glm",
        {
          "name": "imgui",
          "features": [
            "glfw-binding",
            "vulkan-binding"
          ]
        },
        "nativefiledialog-extended",
        "shader-slang",
        "stb",
        "tinyobjloader",
        "vulkan",
        "vulkan-headers",
        "vulkan-loader",
        "vulkan-memory-allocator",
        "vulkan-utility-libraries",
        "vulkan-validationlayers"
      ]
    },
    "server": {
      "description": "Game Server Executable",
      "dependencies": [
        {
          "name": "speedo",
          "features": [ "common" ]
        }
      ]
    }
  },
  "builtin-baseline": "3de032f834a9b28a455e35600b03e9d365ce3b85"
}
